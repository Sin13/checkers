<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <!-- custom css -->
    <link rel="stylesheet/less" type="text/css" href="css/styles.less" />
    <title>Connect 4</title>
  </head>
  <body>
    <h1 class="neon" id="title">CONNECT 4</h1>
    <div class="container text-center board gradient-border" id="board">
      <% for (let i = 0; i < 7; i++) { %>
      <div class="column justify-content-center" id="col-no-<%=i%>">
        <% for (let j = 6; j > 0; j--) { %>
        <div class="cell rounded-circle" id="cell-no-<%=i%>-<%=j%>">
          <!-- <div class="checker rounded-circle"></div> -->
        </div>
        <% } %>
      </div>
      <% } %>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="game-over-modal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5">Game Over!</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body"><p class="text-center" id="modal-dialog"></p></div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
          </div>
        </div>
      </div>
    </div>

    <p class="copyright">Â© 2022 Sina Jalali</p>
    <!-- bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <!-- less -->
    <script src="https://cdn.jsdelivr.net/npm/less"></script>
    <!-- socket.io -->
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/neonEffect.js"></script>
    <!-- custom js -->
    <script src="js/index.js"></script>
  </body>
</html>
